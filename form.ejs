<style>
     body{margin:  0;}
     .maincontainer{
        background: #fdcb6e;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Roboto Slab;
        font-weight: bold;
     }
     .box{
        width:40%;
        height:auto;
        background: #F8EFBA;
        border-radius: 10px;
        padding: 15px;
     }
     .heading{
     display: flex;
     justify-content: center;
     align-items: center;
     margin-bottom: 20px;
     font-size: 20px;
   }
    .btns{
        justify-content: center;
        display: flex;
        align-items: center;
    }




</style>
<html>
    <form action="/info/submit" method="post" enctype="multipart/form-data">
    <head>
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
      <script src="/javascripts/image.js"></script>
    </head>
    <div class="maincontainer">
    <div class="box">
      <div class="heading" style="align-content: center;">
            Submit Information
         <div style="margin-left: auto;"><a href="/info/display"><img src="/images/view.png" width="50px"></a></div>
         </div>
   
        <div class="row" style="justify-content: center;">
            <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 10px;">
                <input type="text" class="form-control" name="firmname"   id="firmname" placeholder="Firm Name">
             </div>
             <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 10px;">
                <input type="text" class="form-control" name="suppliername"   id="suppliername" placeholder="Supplier Name">
             </div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="margin-top: 10px;">
                 <textarea class="form-control" name="address" id="address" rows="2">Address</textarea>
            </div>
         </div>
         <div class="row" style="margin-top: 10;">
            <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 10px;">
               <select class="form-select" name="stateid" id="stateid" >
                  <option selected>Select State</option>
              </select>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 10px;">
                <select class="form-select" name="cityid" id="cityid" >
                   <option selected>Select City</option>
                 </select>
             </div>
        </div>  
        <div class="row" style="justify-content: center;">
            <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-top: 10px;">
                <input type="text" class="form-control" name="dueamount"   id="dueamount" placeholder="Due Amount">
             </div>
             <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-top: 10px;">
                <input type="text" class="form-control" name="advance"   id="advance" placeholder="Advance">
             </div>
             <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-top: 10px;">
                <input type="text" class="form-control" name="advancedate"   id="advancedate" placeholder="Advance Date">
             </div>
        </div> 
        <div class="row">
            <div class="col-lg-12">
                <div>
                    Product:
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="product"  id="product" value="iron">
                    <label class="form-check-label" for="product">Iron</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="product" id="product" value="cement">
                    <label class="form-check-label" for="product">Cement</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="product"  id="product" value="bricks">
                    <label class="form-check-label" for="product">Bricks</label>
                  </div>
            </div>
        </div> 
        <div class="row">
             <div>
                Logo:
             </div>
             <div class="col-xs-12 col-sm-12 col-lg-8" style="margin-top: 5px;">
                <input onchange="dislogo()"  class="form-control" type="file" name="logo" id="logo">
             </div>
             <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-top: 5px;">
                <img id="lg">
             </div>
             
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-6 btns" style="margin-top: 25px;">
                <button type="submit" class="btn btn-primary" style=" width:80%">Submit</button>
             </div>
             <div class="col-xs-12 col-sm-12 col-lg-6 btns" style="margin-top: 25px;">
                <button type="reset" class="btn btn-primary" style=" width:80%">Reset</button>
             </div>
        </div>

        <div class="row" style="margin-top: 25px;" >
            <div class="col-xs-12 col-sm-12 col-lg-12 ">
               <%=message %>
            </div>
         </div>
        


      
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    </div>
    </div>
    </form>
</html>





<style>
    body{margin:  0;}
    .maincontainer{
       background: #fdcb6e;
       width: 100%;
       height: 100%;
       display: flex;
       justify-content: center;
       align-items: center;
       font-family: Roboto Slab;
       font-weight: bold;
    }
    .box{
       width:80%;
       height:auto;
       background: #F8EFBA;
       border-radius: 10px;
       padding: 15px;
    }
    .heading{
     display: flex;
     justify-content: center;
     align-items: center;
     margin-bottom: 25px;
     font-size: 25px;
   }
   .pic
   {
    width: 50px;
    height: 50px;
    border-radius: 20px;
   }

</style>



<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</head>
<div class="maincontainer">
    <div class="box">
        <div class="heading">
            Informations Of Suppliers
            <div style="margin-left: auto;"><a href="/info/supp_info"><img src="/images/submit.png" width="50px"></a></div>
            </div>
    <table class="table table-striped table-hover">
    <tr>
        <th>S No.</th>
        <th>Supplier Id</th>
        <th>Supplier Name</th>
        <th>Firm Name</th>
        <th>State </th>
        <th>City </th>
        <th>Due Amount</th>
        <th>Advance</th>
        <th>Advance Date</th>
        <th>Product</th>
        <th>Logo</th>
        <th>Edit</th>
    </tr>
    
    <%
    data.map((item,i)=>{ %>
        <tr>
        <td><%= i+1%></td>
        <td><%= item.supplierid %></td>
        <td><%= item.suppliername %></td>
        <td><%= item.firmname %></td>
        <td><%= item.statename %></td>
        <td><%= item.cityname %></td>
        <td><%= item.dueamount %></td>
        <td><%= item.advance %></td>
        <td><%= item.advancedate %></td>
        <td><%= item.product %></td>
        <td>
            <img src='/images/<%= item.logo%>' class="pic">
            </td>
            <td>
             <a href="/info/update_data?supplierid=<%=item.supplierid %>"><button type="button" class="btn btn-warning">Update</button></a>
        </td>
        </tr>
        <%   

    })%>
         
   </div>
</div>



</table>
</html>